<Schema name="bike_sales" description="Bikes Sales Cub" measuresCaption="Sales of Bikes">
  <Dimension type="TimeDimension" visible="true" highCardinality="false" name="Date">
    <Hierarchy name="Days" visible="true" hasAll="true" allLevelName="Days" description="Day Dimension HIerachy">
      <Table name="Dim_Date" alias="">
      </Table>
      <Level name="Day" visible="true" table="Dim_Date" column="DayNumberOfMonth" nameColumn="DayNumberOfMonth" type="Integer" uniqueMembers="false" levelType="TimeDays" hideMemberIf="Never">
      </Level>
      <Level name="Month" visible="true" table="Dim_Date" column="MonthNumberOfYear" nameColumn="MonthNumberOfYear" type="Integer" uniqueMembers="false" levelType="TimeMonths" hideMemberIf="Never" description="Month Dimension">
      </Level>
      <Level name="Year" visible="true" table="Dim_Date" column="CalendarYear" nameColumn="CalendarYear" type="String" uniqueMembers="false" levelType="TimeYears" hideMemberIf="Never">
      </Level>
    </Hierarchy>
  </Dimension>
  <Dimension type="StandardDimension" visible="true" highCardinality="false" name="Location" description="The location Dimensions of Sales">
    <Hierarchy name="Territory" visible="true" hasAll="true">
      <Table name="Dim_Location" alias="">
      </Table>
      <Level name="Region" visible="true" table="Dim_Location" column="Region" nameColumn="Region" type="String" uniqueMembers="false" levelType="Regular" hideMemberIf="Never" description="Region of the Sale">
      </Level>
      <Level name="Country" visible="true" table="Dim_Location" column="Country" nameColumn="Country" type="String" uniqueMembers="false" levelType="Regular" hideMemberIf="Never">
      </Level>
    </Hierarchy>
  </Dimension>
  <Dimension type="StandardDimension" visible="true" highCardinality="false" name="Product" description="Dimension of Product for Sales">
    <Hierarchy name="ProductCategory" visible="true" hasAll="true" description="Hierachy of the Product Categories">
      <Table name="Dim_Product" alias="">
      </Table>
      <Level name="TopCategory" visible="true" table="Dim_Product" column="ProductTopCategoryName" nameColumn="ProductTopCategoryName" type="String" uniqueMembers="false" levelType="Regular" hideMemberIf="Never" description="Top Category of Prod">
      </Level>
      <Level name="SubCategory" visible="true" table="Dim_Product" column="ProductSubCategoryName" nameColumn="ProductSubCategoryName" type="String" uniqueMembers="false" levelType="Regular" hideMemberIf="Never" description="Subcategories of Product ">
      </Level>
    </Hierarchy>
  </Dimension>
  <Dimension type="StandardDimension" visible="true" highCardinality="false" name="Customer">
    <Hierarchy name="Age" visible="true" hasAll="true">
      <Table name="Dim_Customer" alias="">
      </Table>
      <Level name="Age" visible="true" table="Dim_Customer" column="Age" nameColumn="Age" type="Integer" uniqueMembers="false" levelType="Regular" hideMemberIf="Never">
      </Level>
    </Hierarchy>
    <Hierarchy name="Gender" visible="true" hasAll="true" description="Gender of Customer">
      <Table name="Dim_Customer" alias="">
      </Table>
      <Level name="Gender" visible="true" table="Dim_Customer" column="Gender" nameColumn="Gender" type="String" uniqueMembers="false" levelType="Regular" hideMemberIf="Never">
      </Level>
    </Hierarchy>
    <Hierarchy name="FullName" visible="true" hasAll="true">
      <Table name="Dim_Customer" alias="">
      </Table>
      <Level name="FullName" visible="true" table="Dim_Customer" column="FullName" nameColumn="FullName" type="String" uniqueMembers="false" levelType="Regular" hideMemberIf="Never">
      </Level>
    </Hierarchy>
  </Dimension>
  <Cube name="bike_sales" caption="Bike Sales Cube to get Information about the bikes sales" visible="true" description="Bike Sales Cube" cache="true" enabled="true">
    <Table name="Fact_InternetSales">
    </Table>
    <DimensionUsage source="Customer" name="Customer" visible="true" foreignKey="CustomerKey" highCardinality="false">
    </DimensionUsage>
    <DimensionUsage source="Product" name="Product" visible="true" foreignKey="ProductKey" highCardinality="false">
    </DimensionUsage>
    <DimensionUsage source="Location" name="ShippedTo" visible="true" foreignKey="ShipToLocationKey" highCardinality="false">
    </DimensionUsage>
    <DimensionUsage source="Date" name="OrderDate" visible="true" foreignKey="OrderDateKey" highCardinality="false">
    </DimensionUsage>
    <Measure name="Quantity" column="OrderQty" datatype="Integer" aggregator="sum" description="Quantity of Sales" visible="true">
    </Measure>
    <Measure name="Revenue" column="OrderLineTotal" datatype="Numeric" formatString="Currency" aggregator="sum" description="Revenue of Sales" visible="true">
    </Measure>
    <Measure name="Profit" column="OrderLineProfit" datatype="Numeric" formatString="Currency" aggregator="sum" description="Profit" visible="true">
    </Measure>
    <Measure name="TaxAmount" column="OrderLineTaxAmt" datatype="Numeric" formatString="Currency" aggregator="sum" description="Amount of Tax " visible="true">
    </Measure>
    <Measure name="ShippingCost" column="OrderLineShippingCost" datatype="Numeric" formatString="Currency" aggregator="sum" description="Cost of Shipping" visible="true">
    </Measure>
  </Cube>
</Schema>
